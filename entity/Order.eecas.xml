<eecas xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/entity-eca-2.1.xsd">
    <eeca id="OrderItemHandleChange" entity="mantle.order.OrderItem" on-create="true" on-update="true" on-delete="true"
            run-on-error="false" get-entire-entity="true" get-original-value="true">
        <actions><service-call name="mantle.order.OrderServices.handle#OrderItemChange" in-map="context"/></actions>
    </eeca>
    <eeca id="OrderPartHandleChange" entity="mantle.order.OrderPart" on-update="true"
            run-on-error="false" get-entire-entity="true" get-original-value="true">
        <actions><service-call name="mantle.order.OrderServices.handle#OrderPartChange" in-map="context"/></actions>
    </eeca>

    <!-- Order Revision Triggers (note OrderItem handled in handle#OrderItemChange, OrderPart handled in handle#OrderPartChange) -->
    <eeca id="OrderContentRevision" entity="mantle.order.OrderContent" on-create="true" on-update="true" on-delete="true" run-on-error="false">
        <actions><service-call name="mantle.order.OrderServices.increment#OrderRevision" in-map="context"/></actions></eeca>
    <eeca id="OrderPartPartyRevision" entity="mantle.order.OrderPartParty" on-create="true" on-update="true" on-delete="true" run-on-error="false">
        <actions><service-call name="mantle.order.OrderServices.increment#OrderRevision" in-map="context"/></actions></eeca>
    <eeca id="OrderPartContactMechRevision" entity="mantle.order.OrderPartContactMech" on-create="true" on-update="true" on-delete="true" run-on-error="false">
        <actions><service-call name="mantle.order.OrderServices.increment#OrderRevision" in-map="context"/></actions></eeca>
    <eeca id="OrderPartTermRevision" entity="mantle.order.OrderPartTerm" on-create="true" on-update="true" on-delete="true" run-on-error="false">
        <actions><service-call name="mantle.order.OrderServices.increment#OrderRevision" in-map="context"/></actions></eeca>
    <eeca id="OrderNoteRevision" entity="mantle.order.OrderNote" on-create="true" on-update="true" on-delete="true" run-on-error="false">
        <actions><service-call name="mantle.order.OrderServices.increment#OrderRevision" in-map="context"/></actions></eeca>
</eecas>
