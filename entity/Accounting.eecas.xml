<eecas xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/entity-eca-2.1.xsd">
    <!-- update Invoice totals (invoiceTotal, appliedPaymentsTotal, unpaidTotal) on changes to InvoiceItem and PaymentApplication -->
    <eeca entity="mantle.account.invoice.InvoiceItem" on-create="true" on-update="true" on-delete="true" run-on-error="false">
        <actions><service-call name="mantle.account.InvoiceServices.update#InvoiceTotals" in-map="[invoiceId:invoiceId]"/></actions>
    </eeca>
    <eeca entity="mantle.account.payment.PaymentApplication" on-create="true" on-update="true" on-delete="true" run-on-error="false" get-entire-entity="true">
        <condition><expression>invoiceId</expression></condition>
        <actions><service-call name="mantle.account.InvoiceServices.update#InvoiceTotals" in-map="[invoiceId:invoiceId]"/></actions>
    </eeca>
    <!-- set Invoice.dueDate based on invoiceDate and SettlementTerm -->
    <eeca entity="mantle.account.invoice.Invoice" on-create="true" on-update="true" run-on-error="false">
        <actions><service-call name="mantle.account.InvoiceServices.checkSet#InvoiceDueDate" in-map="[invoiceId:invoiceId]"/></actions>
    </eeca>

    <!-- update Payment totals (appliedTotal, unappliedTotal) on changes to Payment and PaymentApplication -->
    <eeca entity="mantle.account.payment.Payment" on-create="true" on-update="true" run-on-error="false" get-entire-entity="true" run-before="true">
        <actions>
            <set field="entityValue.amount" from="entityValue.amount ?: 0.0"/>
            <set field="entityValue.appliedTotal" from="entityValue.appliedTotal ?: 0.0"/>
            <set field="entityValue.unappliedTotal" from="entityValue.amount - entityValue.appliedTotal"/>
        </actions>
    </eeca>
    <eeca entity="mantle.account.payment.PaymentApplication" on-create="true" on-update="true" on-delete="true" run-on-error="false" get-entire-entity="true">
        <condition><expression>paymentId</expression></condition>
        <actions><service-call name="mantle.account.PaymentServices.update#PaymentTotals" in-map="[paymentId:paymentId]"/></actions>
    </eeca>

    <!-- maintain isDebit and isTemporary flags on GlAccount -->
    <eeca entity="mantle.ledger.account.GlAccount" on-create="true" on-update="true" run-on-error="false" run-before="true" get-entire-entity="true">
        <actions><service-call name="mantle.ledger.LedgerServices.set#GlAccountFlags" in-map="[entityValue:entityValue]"/></actions>
    </eeca>
</eecas>
